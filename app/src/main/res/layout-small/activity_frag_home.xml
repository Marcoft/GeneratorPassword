<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:id="@+id/home_frag"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:typeface="serif"
            android:id="@+id/choosepar"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="@string/ChooseOptions"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:typeface="serif"
                android:id="@+id/nizn"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:gravity="center"
                android:text="@string/LowerCase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:typeface="serif"
                android:textStyle="italic"
                android:layout_marginStart="20dp"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@id/nizn"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abcde"/>

            <Switch
                android:id="@+id/lowerCase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:gravity="center" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:typeface="serif"
                android:id="@+id/verh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="@string/Uppercase"
                android:textSize="18sp" />

            <TextView
                android:typeface="serif"
                android:textStyle="italic"
                android:layout_marginStart="20dp"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@id/verh"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABCDE"/>

            <Switch
                android:id="@+id/upCase"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:typeface="serif"
                android:id="@+id/numbers"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:gravity="center"
                android:text="@string/Numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:typeface="serif"
                android:textStyle="italic"
                android:layout_marginStart="20dp"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@id/numbers"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345"/>

            <Switch
                android:id="@+id/numb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:gravity="center" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:typeface="serif"
                android:id="@+id/symbolss"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:gravity="center"
                android:text="@string/Characters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:typeface="serif"
                android:textStyle="italic"
                android:layout_marginStart="20dp"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@id/symbolss"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="!@$%*"/>

            <Switch
                android:id="@+id/symbols"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>


        <SeekBar
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/progress"
            android:progress="8"
            android:max="30"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:typeface="serif"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="right"
            android:id="@+id/sizeSeek"
            android:textSize="14sp"
            android:text="@string/Eightcharacters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:background="#fff"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:maxLength="17"
                android:textAlignment="textStart"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/login"
                android:textSize="15sp"
                android:hint="@string/enter_key_password"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/clear_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#fff"
                android:src="@drawable/ic_clear"
                android:tint="@color/colorAccent" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/result"
                android:textSize="15sp"
                android:text=""
                android:layout_height="wrap_content" />

            <ImageButton
                android:tint="@color/colorAccent"
                android:id="@+id/save_pass"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_like_off"
                android:background="#fff"
                android:layout_height="wrap_content" />

            <ImageButton
                android:tint="@color/colorAccent"
                android:id="@+id/clear_pass"
                android:layout_marginStart="3dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_clear"
                android:background="#fff"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <Button
            android:typeface="serif"
            android:background="@drawable/rounded_button"
            android:id="@+id/generate"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:text="@string/GenerateNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:typeface="serif"
            android:background="@drawable/rounded_button"
            android:id="@+id/shuffle"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:text="@string/Sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:typeface="serif"
            android:background="@drawable/rounded_button"
            android:id="@+id/save_pass_buff"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:text="@string/CopyClipboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:typeface="serif"
            android:id="@+id/minePass"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="@string/YourPassword"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"/>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <EditText
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:id="@+id/edt_Name"
                    android:textAlignment="textStart"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="15sp"
                    android:hint="@string/enter_name_for_the_password"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:background="#fff"
                    android:id="@+id/clear_save1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_clear"
                    android:tint="@color/colorAccent" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <EditText
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:id="@+id/edt_Password"
                    android:textAlignment="textStart"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="15sp"
                    android:hint="@string/enter_password"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:background="#fff"
                    android:tint="@color/colorAccent"
                    android:id="@+id/save_save"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_like_off"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:background="#fff"
                    android:tint="@color/colorAccent"
                    android:id="@+id/clear_save2"
                    android:layout_marginStart="3dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_clear"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>